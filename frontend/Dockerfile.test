# Test Container for TAP Integration Platform Frontend
# This container is specifically designed for running tests in a consistent environment

FROM node:18-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    git \
    bash \
    curl

# Set environment variables
ENV NODE_ENV=test \
    CI=true

# Copy package files
COPY package.json package-lock.json /app/

# Install dependencies
RUN npm ci

# Copy test configuration files
COPY jest.config.unified.js jest.setup.js /app/

# Create test results directory
RUN mkdir -p /app/test_results

# Copy entrypoint script
COPY scripts/test_entrypoint.sh /app/
RUN chmod +x /app/test_entrypoint.sh

# Default command runs all tests
CMD ["./test_entrypoint.sh"]