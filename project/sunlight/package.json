{
  "name": "tap-integration-platform-sunlight",
  "version": "1.0.0",
  "description": "Optimized build and code standardization for TAP Integration Platform",
  "private": true,
  "scripts": {
    "start": "npm --prefix ../../frontend start",
    "fix:all": "node scripts/run-all-fixes.js",
    "fix:html-entities": "node scripts/fix-html-entities.js",
    "fix:jsx": "node scripts/fix-jsx-syntax.js",
    "fix:hooks": "node scripts/fix-react-hooks.js",
    "fix:display-names": "node scripts/fix-component-display-names.js",
    "verify:build": "node scripts/verify-build.js",
    "copy:config": "cp -f tsconfig.json ../../frontend/tsconfig.json && cp -f eslint.config.js ../../frontend/config/eslint.config.js",
    "copy:design-system": "mkdir -p ../../frontend/src/design-system/optimized && cp -f src/design-system/*.js ../../frontend/src/design-system/optimized/",
    "apply:all": "node scripts/apply-improvements.js",
    "update:context": "cat ClaudeContext.md",
    "build:frontend": "npm --prefix ../../frontend run build:skip-ts",
    "test:frontend": "npm --prefix ../../frontend run test:once",
    
    "phase1": "node scripts/apply-improvements.js",
    "phase2:transform": "node scripts/transform-components.js",
    "phase2:remove-deprecated": "node scripts/remove-deprecated.js",
    "phase3:hooks": "node scripts/standardize-hooks.js",
    "phase3:contexts": "node scripts/standardize-contexts.js",
    "phase4:services": "node scripts/standardize-services.js",
    "phase4:utilities": "node scripts/standardize-utilities.js",
    "phase5:tests": "node scripts/standardize-tests.js",
    "phase5:docs": "node scripts/standardize-documentation.js",
    "phase6:webpack": "node scripts/optimize-webpack.js",
    "phase6:build": "node scripts/optimize-build-process.js",
    "phase7:react": "node scripts/optimize-react-performance.js",
    "phase7:render": "node scripts/analyze-render-performance.js",
    "phase8:a11y": "node scripts/accessibility-audit.js",
    "phase8:seo": "node scripts/seo-optimization.js",
    "audit": "node scripts/audit-technical-debt.js",
    
    "run:phase1": "npm run phase1 && npm run audit",
    "run:phase2": "npm run phase2:remove-deprecated && npm run phase2:transform && npm run audit",
    "run:phase3": "npm run phase3:hooks && npm run phase3:contexts && npm run audit",
    "run:phase4": "npm run phase4:services && npm run phase4:utilities && npm run audit",
    "run:phase5": "node scripts/run-phase5.js",
    "run:phase6": "node scripts/run-phase6.js",
    "run:phase7": "node scripts/run-phase7.js",
    "run:phase8": "node scripts/run-phase8.js",
    "run:phase8:fix": "node scripts/run-phase8.js --fix",
    "run:phase9": "node scripts/run-phase9.js",
    "run:phase9:fix": "node scripts/run-phase9.js --fix",
    "run:phase10": "node scripts/run-phase10.js",
    "run:phase10:fix": "node scripts/run-phase10.js --fix"
  },
  "keywords": [
    "optimization",
    "standardization",
    "code-quality"
  ],
  "author": "",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  }
}